{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Orca",
  "version": "0.1.0",
  "identifier": "com.galengreen.orca",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "Orca",
        "shadow": true,
        "resizable": true,
        "maximized": true,
        "titleBarStyle": "Transparent",
        "backgroundColor": "#000000",
        "transparent": true
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}